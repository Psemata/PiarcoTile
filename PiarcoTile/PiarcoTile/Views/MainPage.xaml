<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiarcoTile.Views.MainPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="150">
            <StackLayout.Background>
                <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
                    <GradientStop Color="#FCE4EC"
                          Offset="0.1"/>
                    <GradientStop Color="#26C6DA"
                          Offset="1"/>
                </LinearGradientBrush>
            </StackLayout.Background>
            <Label Style="{StaticResource MainTitle}" Text="Piarco Tile"/>
            <Button Style="{StaticResource MainMenuButton}" Text="Jouer" Clicked="OnSelectionPageButtonClicked"></Button>
            <Label Text="Bruno Costa et Diogo Lopes da Silva" FontSize="18" HorizontalTextAlignment="Center"/>
            <Label Text="HE-Arc | 2021 - 2022" FontSize="15" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
