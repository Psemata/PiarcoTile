<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiarcoTile.App">
    <Application.Resources>
        <!-- Colors -->
        <Color x:Key="PrimaryColor">#FCE4EC</Color>
        <Color x:Key="SecondaryColor">#26C6DA</Color>
        <Color x:Key="ButtonColor">#388AAF</Color>
        
        <!-- Element classes -->
        <!-- Button -->
        <Style x:Key="MainMenuButton" TargetType="{x:Type Button}">
            <Setter Property="BackgroundColor"
                    Value="{StaticResource ButtonColor}" />
            <Setter Property="Margin" Value="15"></Setter>
            <Setter Property="CornerRadius" Value="100"></Setter>
            <Setter Property="BorderColor" Value="Black"></Setter>
            <Setter Property="BorderWidth" Value="0.1"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
        </Style>
        <!-- Title -->
        <Style x:Key="MainTitle" TargetType="{x:Type Label}">
            <Setter Property="TextColor" Value="#263238"></Setter>
            <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="42"></Setter>
            <Setter Property="Padding" Value="50"></Setter>
        </Style>
    </Application.Resources>
</Application>