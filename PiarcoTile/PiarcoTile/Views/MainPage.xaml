<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiarcoTile.MainPage">

    <!-- White : #FCE4EC -->
    <!-- Deep Blue : #2743CE -->
    <!-- Light Blue : #26C6DA -->
    <StackLayout>
        <StackLayout.Background>
            <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
                <GradientStop Color="#FCE4EC"
                          Offset="0.1"/>
                <GradientStop Color="#26C6DA"
                          Offset="1"/>
            </LinearGradientBrush>
        </StackLayout.Background>
        <Label Padding="50" Text="Piarco Tile" HorizontalTextAlignment="Center" TextColor="#263238" FontSize="42"/>
        <Button BackgroundColor="#2743AE" Margin="15" Text="Jouer"></Button>
        <Button BackgroundColor="#2743AE" Margin="15" Text="Réglages"></Button>
    </StackLayout>

</ContentPage>
